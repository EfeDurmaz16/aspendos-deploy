{
    "name": "aspendos",
    "private": true,
    "packageManager": "bun@1.1.30",
    "workspaces": [
        "apps/*",
        "services/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "db:generate": "turbo run db:generate --filter=@aspendos/db",
        "db:push": "turbo run db:push --filter=@aspendos/db"
    },
    "devDependencies": {
        "turbo": "^2.4.0"
    }
}