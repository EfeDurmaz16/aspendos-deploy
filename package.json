{
    "name": "aspendos",
    "private": true,
    "packageManager": "bun@1.1.30",
    "workspaces": [
        "apps/*",
        "services/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "biome lint .",
        "format": "biome format --write .",
        "check": "biome check .",
        "check:fix": "biome check --write .",
        "db:generate": "turbo run db:generate --filter=@aspendos/db",
        "db:push": "turbo run db:push --filter=@aspendos/db"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.11",
        "turbo": "^2.4.0"
    },
    "dependencies": {
        "@polar-sh/better-auth": "^1.6.4",
        "@polar-sh/sdk": "^0.42.2"
    }
}
