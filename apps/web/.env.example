# ============================================
# ASPENDOS WEB APP - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local or any file with real secrets!

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8787

# ============================================
# AUTHENTICATION - BETTER AUTH
# ============================================
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your_better_auth_secret_here
BETTER_AUTH_URL=http://localhost:3000

# ============================================
# SOCIAL LOGIN PROVIDERS (Optional)
# ============================================
# Google OAuth - https://console.cloud.google.com
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Apple Sign In - https://developer.apple.com
APPLE_CLIENT_ID=your_apple_client_id_here
APPLE_CLIENT_SECRET=your_apple_client_secret_here

# Facebook Login - https://developers.facebook.com
FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here

# ============================================
# DATABASE - POSTGRESQL (for Better Auth sessions)
# ============================================
# PostgreSQL connection string
# Supabase: https://supabase.com/dashboard
# Neon: https://neon.tech
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"


# ============================================
# VECTOR DATABASE - QDRANT
# ============================================
# Get from https://cloud.qdrant.io or use local: http://localhost:6333
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# ============================================
# AI PROVIDERS
# ============================================
# OpenAI - https://platform.openai.com
OPENAI_API_KEY=sk-your_openai_key_here

# Anthropic (Claude) - https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# Groq (Fast inference) - https://console.groq.com
GROQ_API_KEY=gsk_your_groq_key_here

# Google AI (Gemini) - https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_key_here

# ============================================
# BILLING - POLAR.SH
# ============================================
# Get from https://dashboard.polar.sh
POLAR_ACCESS_TOKEN=your_polar_access_token_here
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret_here

# ============================================
# MONITORING - SENTRY
# ============================================
# Get from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# ============================================
# DEVELOPMENT / CI
# ============================================
# Set to true in CI environments
CI=false
