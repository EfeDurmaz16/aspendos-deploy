# Environment Variables
# Copy this file to .env and fill in the values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/aspendos"

# Better Auth
BETTER_AUTH_SECRET="your_secret_here"
BETTER_AUTH_URL="http://localhost:3000"

# AI - Vercel AI Gateway (single key for all providers)
AI_GATEWAY_API_KEY="your_ai_gateway_api_key_here"

# Polar Payments
POLAR_ACCESS_TOKEN="..."
POLAR_WEBHOOK_SECRET="..."

# Polar Billing - Public Product IDs (embedded at build time)
NEXT_PUBLIC_POLAR_STARTER_PRODUCT_ID=
NEXT_PUBLIC_POLAR_PRO_PRODUCT_ID=
NEXT_PUBLIC_POLAR_ULTRA_PRODUCT_ID=

# Qdrant Vector DB
QDRANT_URL="https://..."
QDRANT_API_KEY="..."

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# Service Ports (local dev)
API_PORT=8080
AGENTS_PORT=8082
