# ============================================
# YULA API - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env or any file with real secrets!

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
# Neon: https://neon.tech
DATABASE_URL=postgresql://user:password@localhost:5432/aspendos

# ============================================
# AUTHENTICATION - BETTER AUTH
# ============================================
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your_better_auth_secret_here
BETTER_AUTH_URL=http://localhost:3000

# ============================================
# AI - VERCEL AI GATEWAY (REQUIRED)
# ============================================
# Single API key for all AI providers (OpenAI, Anthropic, Google, Groq)
# Get from https://vercel.com/docs/ai-gateway
# On Vercel deployments, VERCEL_OIDC_TOKEN is used automatically
AI_GATEWAY_API_KEY=your_ai_gateway_api_key_here

# ============================================
# VECTOR DATABASE - QDRANT
# ============================================
# Get from https://cloud.qdrant.io or use local: http://localhost:6333
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# ============================================
# BILLING - POLAR.SH
# ============================================
# Get from https://dashboard.polar.sh
POLAR_ACCESS_TOKEN=your_polar_access_token_here
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret_here

# Polar Product IDs (REQUIRED) - get from Polar dashboard
POLAR_STARTER_PRODUCT_ID=
POLAR_PRO_PRODUCT_ID=
POLAR_ULTRA_PRODUCT_ID=

# Polar Annual Product IDs (optional)
POLAR_STARTER_ANNUAL_PRODUCT_ID=
POLAR_PRO_ANNUAL_PRODUCT_ID=
POLAR_ULTRA_ANNUAL_PRODUCT_ID=

# ============================================
# RATE LIMITING - UPSTASH REDIS
# ============================================
# Get from https://console.upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ============================================
# SCHEDULER - QSTASH
# ============================================
# Get from https://console.upstash.com/qstash
QSTASH_TOKEN=
QSTASH_URL=https://qstash.upstash.io
WEBHOOK_BASE_URL=https://api.yula.dev

# ============================================
# PUSH NOTIFICATIONS - ONESIGNAL
# ============================================
# Get from https://onesignal.com
ONESIGNAL_APP_ID=
ONESIGNAL_REST_API_KEY=

# ============================================
# SECURITY
# ============================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=
# Secret for authenticating cron job requests
CRON_SECRET=
# Comma-separated list of admin user IDs
ADMIN_USER_IDS=

# ============================================
# MONITORING - SENTRY
# ============================================
# Get from https://sentry.io
SENTRY_DSN=your_sentry_dsn_here

# ============================================
# SERVER
# ============================================
PORT=8787
NODE_ENV=development

# ============================================
# FRONTEND
# ============================================
# Frontend URL (for redirects and CORS)
FRONTEND_URL=http://localhost:3000

# ============================================
# AGENTS SERVICE (Optional)
# ============================================
# URL for the Python agents service
AGENTS_URL=http://localhost:8082
